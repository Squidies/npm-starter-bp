{
  "name": "npm-starter-bp",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bs": "node ./config/bs.js",
    "build:dev": "npm-run-all build:all watch:all",
    "build:all": "npm-run-all -p svgo postcss rollupjs",
    "build:prod": "npm-run-all -p svgo postcss:prod rollupjs:prod",
    "dev": "npm-run-all build:all watch:all",
    "postinstall": "node ./config/postinstall.js",
    "postcss": "node ./config/postcss.js",
    "postcss:prod": "cross-env NODE_ENV=production node ./config/postcss.js",
    "rollupjs": "rollup -c ./config/rollup.config.js",
    "rollupjs:prod": "cross-env NODE_ENV=production rollup -c ./config/rollup.config.js",
    "svgo": "svgo -f ./src/svg -o ./dest/img",
    "watch:svg": "onchange \"./src/svg/**/*.svg\" -- npm run svgo",
    "watch:css": "onchange \"./src/**/*.css\" -- npm run postcss",
    "watch:js": "onchange \"./src/**/*.js\" -- npm run rollupjs",
    "watch:all": "npm-run-all -p watch:svg watch:css watch:js bs",
    "watch": "npm-run-all -p watch:svg watch:css watch:js bs"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "cross-env": "^5.1.1",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss": "^6.0.14",
    "postcss-discard-comments": "^2.0.4",
    "postcss-nesting": "^4.2.1",
    "postcss-partial-import": "^4.1.0",
    "postcss-sassy-mixins": "^2.1.0",
    "rollup": "^0.52.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-globals": "^1.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "svgo": "^1.0.3",
    "touch": "^3.1.0"
  }
}
